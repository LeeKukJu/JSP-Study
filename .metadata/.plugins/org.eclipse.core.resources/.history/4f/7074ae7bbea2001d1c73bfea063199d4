<script type="text/javascript">



var pw_flag = true;

function loginCheck() {
   
var id = document.getElementById("id").value;   
var pw = document.getElementById("pw").value;   
var pwConfirm = document.getElementById("pwCheck").value;   
   
pw_flag = true;
var regExpPw = /(a-z+){3,}|([0-9]+){3,}/;
var regExpPw1 = /([a]+){3}|([b]+){3}|([c]+){3}|([d]+){3}|([e]+){3}|([f]+){3}|(g]+){3}|([h]+){3}|([i]+){3}|([j]+){3}|([k]+){3}|([l]+){3}|([m]+){3}|([n]+){3}|([o]+){3}|([p]+){3}|([q]+){3}|([r]+){3}|([s]+){3}|([t]+){3}|([u]+){3}|([v]+){3}|([w]+){3}|([x]+){3}|([y]+){3}|([z]+){3}/;
            
            
if(id.length ==0 ){
   alert("아이디를 입력해주세요");
   return false;
}            
            
if(pw.lenth == 0) {
   alert("비밀번호를 입력해주세요");
   return false;
}else {
   if(pw != pwConfirm) {
      alert("비밀번호가 일치하지 않습니다.")
      return false;
   }
}            
   
   if(regExpPw1.test(pw)) {
      alert("동일한 영문, 숫자는 3자 이상 연속 입력할 수 없습니다.");
      return false;
      
   }else {
      if(regExpPw.test(pw)){
         alert("영문, 숫자는 3자 이상 연속 입력할 수 없습니다.")
         return false;
      }
   }
   
   document.form.submit
   
   
    
//     var form = document.login;
    
//     var pw = form.pw.value;
    
    
//       if(/(\w)\1\1/.test(pw)){
//          alert("영문, 숫자는 3자이상 연속 입력할 수 없습니다. ")
//          form.pw.select();
//          return false;
//       }
      
//       form.submit();
         
}      
</script>
